<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.*?>
<?import org.example.TopMenuController?>
<?import org.example.LeftMenuController?>
<fx:root type="BorderPane" xmlns:fx="http://javafx.com/fxml" prefHeight="600" prefWidth="1000"
         stylesheets="@/css/style.css">
    <top>
        <TopMenuController/>
    </top>
    <left>
        <LeftMenuController/>
    </left>
    <center>
        <GridPane alignment="TOP_CENTER" vgap="10" hgap="10" styleClass="center-menu">
            <Label text="Book Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <Label text="Author:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <Label text="Publisher:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>

            <TextField fx:id="bookName" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            <TextField fx:id="author" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            <TextField fx:id="publisher" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <HBox spacing="10" alignment="BOTTOM_RIGHT" GridPane.columnIndex="1" GridPane.rowIndex="4">
                <Button fx:id="create" text="Create" styleClass="btn-create"/>
                <Button fx:id="delete" text="Delete" styleClass="btn-delete"/>
            </HBox>

            <Label fx:id="notifyMsg" GridPane.rowIndex="5" GridPane.columnSpan="3"/>

            <TableView fx:id="tableView" GridPane.rowIndex="6" GridPane.columnSpan="3">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
                <columns>
                    <TableColumn text="Book Name">
                        <cellValueFactory>
                            <PropertyValueFactory property="bookName"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Author">
                        <cellValueFactory>
                            <PropertyValueFactory property="author"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Publisher">
                        <cellValueFactory>
                            <PropertyValueFactory property="publisher"/>
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
        </GridPane>
    </center>
</fx:root>